# Example environment configuration
# Copy this file to `.env` and fill in actual secrets

# === LLM & AI PROVIDERS ===
OPENAI_API_KEY=sk-proj-<your-openai-api-key>
OPENAI_SERVICE_ACCOUNT_KEY=sk-svcacct-<service-account-key>
CLAUDE_API_KEY=sk-ant-<your-claude-api-key>
GEMINI_API_KEY=<your-gemini-key>
IDX_SECRET_MANAGER_KEY=<your-idx-secret-manager-key>
FIREBASE_BROWSER_API_KEY=<your-firebase-browser-key>
DEEPSEEK_API_KEY=sk-<deepseek-key>
OPENROUTER_API_KEY=sk-or-v1-<openrouter-key>
LANGCHAIN_API_KEY=lsv2_pt_<langchain-key>

# === GOOGLE CLOUD & FIREBASE CONFIGS ===
GCP_PROJECT_ID=isa-firebase-xxxx
GCP_REGION=europe-west4
GCP_SERVICE_ACCOUNT_KEY_JSON=<base64_json_or_path>
GOOGLE_CLIENT_ID=<your-client-id>
GOOGLE_CSE_ID=<your-cse-id>

# === WEBHOOKS / CI / REPO ===
JIRA_WEBHOOK_SECRET=<your-jira-secret>
GITHUB_PAT=github_pat_<github-token>

# === DEV EMULATORS ===
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
FUNCTIONS_EMULATOR_HOST=localhost:5001

# === DATABASE CREDENTIALS ===
PG_HOST=localhost
PG_PORT=5432
PG_USER=<db_user>
PG_PASSWORD=<db_password>
PG_DATABASE=<db_name>

# === OPTIONAL / EXTRA ===
SUPABASE_API_KEY=sbp_<supabase-api-key>
SENTRY_DSN=<your-sentry-dsn>
ENABLE_EXPERIMENTAL_FEATURES=true
